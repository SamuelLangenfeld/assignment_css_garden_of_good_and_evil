
<html lang="en">
<head>
  <meta charset="utf-8">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

<!-- Optional theme -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

</head>

<body>

  <div class="form-group {{#if favColor}} fav-color-{{favColor}} {{/if}}">

  <div class="form-group">

    <form action="/" method="post">
      <div class="radio">
        <label><input type="radio" value="good" name="good-evil">Good</label>
      </div>
      <div class="radio">
        <label><input type="radio" value="evil" name="good-evil">Evil</label>
      </div>
      <div>
        <label>Favorite Food<input type="text" name="favFood" placeholder="{{favFood}}"></label>
      </div>
      <div class="form-drop">
        <label>Select Color</label>
        <select class="form-control" id="favColor" name="favColor">
          <option>orange</option>
          <option>green</option>
          <option>yellow</option>
        </select>
      </div>
      <div>
        <label>Insanity</label><input class="slider" id="insanity" data-slider-id='insanity-slider' type="text" data-slider-min="1" data-slider-max="5" data-slider-step="1" data-slider-value="5" name="insanity"/>
      </div>
      <input type="submit">
    </form>
    </div>
    <div>
      {{#if resume}}
      <h1>RESUME</h1>
      <h1>{{resume}}</h1>
      {{/if}}
    </div>


    {{#if likes}}
      <div class="row">
      <div class="col-md-6">
      <h2>LIKES</h2>
    

    {{#each likes as |like|}}
    <div>{{like}}</div>
    {{/each}}

    </div>
    <div class="col-md-6">
    <h2>DISLIKES</h2>
    {{#each dislikes as |dislike|}}
    <div>{{dislike}}</div>
   
    {{/each}}
     </div>
     </div>
    {{/if}}

    {{#if biography}}
    <h1>BIOGRAPHY</h1>
    <h2>{{biography}}</h2>
    {{/if}}


